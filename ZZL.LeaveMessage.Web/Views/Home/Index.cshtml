
@model PagedList.PagedList<ZZL.LeaveMessage.Entity.DTO.MessageDto>
@using PagedList
@{
    ViewBag.Title = "留言列表";
}

<li><a href="@Url.Action("LeaveMessage","Home",new { returnUrl=Url.Encode(Request.RawUrl)})">我要留言</a></li>

<hr />
<table class="table table-bordered table-striped">
    <caption style="text-align:center;">留言列表</caption>
    <thead>
        <tr>
            <th>留言标题</th>
            <th>留言内容</th>
            <th>留言时间</th>
            <th>留言人</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td>@(item.CreateTime?.ToString("yyyy-MM-dd"))</td>
                <td>@item.UserName</td>
                <td><a href="@Url.Action("Reply","Home",new { returnUrl=Url.Encode(Request.RawUrl)})">回复</a>|<a href="#">回复列表</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    
</div>




