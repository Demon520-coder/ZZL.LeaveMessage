@model ZZL.LeaveMessage.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationMessage("error", new { @class = "text-danger" })
    @Html.Hidden("returnUrl", (string)ViewBag.returnUrl)
    <div class="form-group">
        <label for="name" class="col-md-2">用户名</label>
        <div class="col-md-4">
            @Html.TextBoxFor(s => s.UserName, new { @class = "form-control", placeholder = "请输入用户名" })
            @Html.ValidationMessageFor(s => s.UserName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label for="pwd" class="col-md-2">密码</label>
        <div class="col-md-4">
            @Html.PasswordFor(s => s.PassWord, new { @class = "form-control", placeholder = "请输入密码" })
            @Html.ValidationMessageFor(s => s.PassWord, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="validateCode" class="col-md-2">验证码</label>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-8">
                    @Html.TextBoxFor(s => s.ValidateCode, new { @class = "form-control", placeholder = "请输入验证码" })
                    @Html.ValidationMessageFor(s => s.ValidateCode, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    <img src="@Url.Action("GetValidateCode","Home")" class="" id="codeImg" onclick="this.src='@Url.Action("GetValidateCode","Home")?rd='+Date.now()" />
                </div>
            </div>         
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <input type="submit" value="登陆" class="btn btn-dark" />
            <a href="#" class="btn btn-danger">取消</a>
        </div>
    </div>
}




